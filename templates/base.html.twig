    {% endblock %}
</head>

<body>
 {% block header %}
    <!-- Sidebar -->
    <div class="sidebar">
        <h2>Gestion Boutique</h2>
        <ul>
            
            {% if is_granted('ROLE_BOUTIQIER') or is_granted('ROLE_ADMIN') %}
            <li><a href="{{ path('app_dashboard') }}">Dashboard</a></li>
            <li><a href="{{ path('app_dette') }}">Dettes</a></li>
            <li><a href="{{ path('app_client') }}">Clients</a></li>
            <li><a href="{{ path('app_article') }}">Articles</a></li>
            <li><a href="{{ path('app_demande') }}">Demandes</a></li>
            <li><a href="{{ path('app_relance') }}">Relances</a></li>
        {% endif %}
        
        {% if is_granted('ROLE_ADMIN') %}
            <li><a href="{{ path('app_user') }}">Utilisateurs</a></li>
        {% endif %}
        {% if is_granted('ROLE_CLIENT') and not (is_granted('ROLE_BOUTIQIER') or is_granted('ROLE_ADMIN')) %}
