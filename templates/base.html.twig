            <li><a href="{{ path('app_clientDettes') }}">Mes Dettes</a></li>
            
        {% endif %}
        </ul>
    </div>

    <!-- Top Navbar -->
    <div class="top-navbar">
        <div class="logo">
        <h6>{{ app.user.nom }} {{ app.user.prenom }}</h6>
        </div>

        
        <nav>
            <a href="{{ path('app_logout') }}">Déconnexion</a>
        </nav>
    </div>
{% endblock %}
    <main class="cont " >
        {% block body %}{% endblock %}
    </main>
    
</body>
</html>
